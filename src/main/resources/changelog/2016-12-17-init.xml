            <column name="name" value="Test value"/>
            <column name="description" value="Hello World desc" />
        </insert>

        <insert tableName="task">
            <column name="name" value="Test value"/>
            <column name="description" value="Hello World desc" />
        </insert>
    </changeSet>
</databaseChangeLog>