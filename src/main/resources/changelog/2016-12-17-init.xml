<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="Maksim Iliukovich" id="0">
        <createTable tableName="task">
            <column autoIncrement="true" name="id" type="INT UNSIGNED">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
        </createTable>
    </changeSet>

    <changeSet author="Maksim Iliukovich" id="1">
        <createTable tableName="theory">
            <column autoIncrement="true" name="id" type="INT UNSIGNED">
                <constraints primaryKey="true"/>
            </column>
            <column name="task_id" type="INT UNSIGNED">
                <constraints nullable="false" foreignKeyName="fk_theory_task" references="task(id)"/>
            </column>
            <column name="text" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="test">
            <column autoIncrement="true" name="id" type="INT UNSIGNED">
                <constraints primaryKey="true"/>
            </column>
            <column name="task_id" type="INT UNSIGNED">
                <constraints nullable="false" foreignKeyName="fk_test_task" references="task(id)"/>
            </column>
            <column name="description" type="text"/>
        </createTable>

        <insert tableName="task">
            <column name="name" value="Test value"/>
            <column name="description" value="Hello World desc" />
        </insert>

